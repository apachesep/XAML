                    FontSize="13"
                    TextColor="#00AEFF"/>
            </Grid>
            <Grid
                Grid.Column="2"
                HorizontalOptions="End" VerticalOptions="Center">
                <Image
                    HorizontalOptions="Center" VerticalOptions="Center"
                    Source="daybox.png"/>
                <Label
                    HorizontalOptions="Center" VerticalOptions="Center" VerticalTextAlignment="Center"
                    Margin="0,-5,0,0"
                    Text="Day 3"
                    FontSize="13"
                    TextColor="#00AEFF"/>
