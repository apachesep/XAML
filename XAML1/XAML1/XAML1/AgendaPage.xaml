                                Source="livered2.png"/>
                            <Image
                                HorizontalOptions="Start" VerticalOptions="Center"
                                Margin="17,0,0,0"
                                Source="ngvngvnv.png"/>
                            <Label
                                HorizontalOptions="End" VerticalOptions="Center"
                                Margin="0,-2,18.8,0"
                                Text="Live"
                                TextColor="White"
                                FontSize="15"
                                FontAttributes="Bold"/>
                        </Grid>

                        <Grid
                            RowSpacing="0" ColumnSpacing="0"
                            Margin="14.9, 0, 82.8,0"
                            >
                            <StackLayout
                                Orientation="Vertical"
                                Spacing="0"
                                >
                                <Label
                                    HeightRequest="39"
                                    Margin="14,0,60,0"
                                    Text="The story behind the Space X"
                                    FontSize="16"
                                    TextColor="#565656"/>
