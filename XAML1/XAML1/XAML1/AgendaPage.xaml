                                Orientation="Vertical"
                                Spacing="0"
                                >
                                <Label
                                    HeightRequest="39"
                                    Margin="14,0,60,0"
                                    Text="Nine key highlights from Bill Gates"
                                    FontSize="16"
                                    TextColor="#565656"/>
                                <StackLayout
                                    Orientation="Horizontal"
                                    Margin="0,5,0,0"
                                    Spacing="0"
